

<h2 class="mt-4 mb-5 text-center">新增支出</h2>

<div class="container">

  <div class="row justify-content-center mt-4 mb-3">
    <div class="col-7">
      <form action="/records/new" method="post">

        <div class="row mb-3">
          <div class="col-3">
            *必填欄位
          </div>
          <div class="col-8 text-center fs-5">
            請輸入你的支出
          </div>
        </div>

        <div class="row align-items-center mb-4">
          <label for="name" class="col-3 form-label h5 text-end mb-0">名稱*</label>
          <div class="col-8">
            <input type="text" class="form-control" id="name" name="name" placeholder="請輸入消費項目名稱...">
          </div>
        </div>

        <div class="row align-items-center mb-4">
          <label for="date" class="col-3 form-label h5 text-end mb-0">日期*</label>
          <div class="col-8">
            <input type="date" class="form-control" id="date" name="date" placeholder="請輸入消費日期...">
          </div>
        </div>

        <div class="row align-items-center mb-4">
          <div class="col-3 h5 text-end mb-0">類別*</div>
          <div class="col-8">
            <select class="form-select" name="categoryId" aria-label="Default select example">
              <option selected>類別</option>
              <option value="1">One</option>
              <option value="2">Two</option>
              <option value="3">Three</option>
            </select>
          </div>
        </div>

        <div class="row align-items-center mb-4">
          <label for="amount" class="col-3 form-label h5 text-end mb-0">金額*</label>
          <div class="col-8">
            <input type="number" class="form-control" id="amount" name="amount" placeholder="請輸入消費項目名稱...">
          </div>
        </div>

      </form>
    </div>
  </div>

  {{!-- 新增按鈕 --}}
  <div class="row justify-content-center">
      <button type="button" class="col-2 btn btn-primary me-1">新增支出</button>
  </div>

</div>

<script>

  // 將input:date預設日期設為今日
  const dateInput = document.querySelector('#date');
  setDefaultDate(dateInput);  







  function setDefaultDate(dateInputNode) {
    let date = new Date();

    let day = date.getDate();
    let month = date.getMonth() + 1;
    let year = date.getFullYear();

    if (month < 10) month = "0" + month;
    if (day < 10) day = "0" + day;

    let today = year + "-" + month + "-" + day;    
    dateInputNode.value = today;
  }

</script>



