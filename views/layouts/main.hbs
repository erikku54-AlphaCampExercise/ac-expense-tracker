        </form>

      {{else}}

        <a class="btn btn-outline-primary border border-2 border-dark fw-bolder ms-auto me-2" href="/users/login">登入</a>
        <a class="btn btn-outline-primary border border-2 border-dark fw-bolder me-4" href="/users/register">註冊</a>

      {{/if}}

    </div>
  </nav>

  <!-- partial templates will replace the part of "body" here -->
